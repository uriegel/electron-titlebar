    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Main Process",
            "cwd": "${workspaceRoot}",
            "envFile": "${workspaceFolder}/.vscode/launch.env",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script", "start"
            ],
            "outputCapture": "std",
            "port": 5858
        }        
    ]
}